							"deleting": false
						}
					}
				},
				"source": [
					"def y_step(r):\r\n",
					"    if r['direction'] == 'u':\r\n",
					"        return r['y'] - 1\r\n",
					"    elif r['direction'] == 'd':\r\n",
					"        return r['y'] + 1\r\n",
					"    elif r['direction'] == 'l':\r\n",
					"        return r['y']\r\n",
					"    elif r['direction'] == 'r':\r\n",
					"        return r['y']"
				],
				"execution_count": 19
