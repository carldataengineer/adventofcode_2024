				"source": [
					"def x_step(r):\r\n",
					"    if r['direction'] == 'u':\r\n",
					"        return r['x']\r\n",
					"    elif r['direction'] == 'd':\r\n",
					"        return r['x']\r\n",
					"    elif r['direction'] == 'l':\r\n",
					"        return r['x'] -1\r\n",
					"    elif r['direction'] == 'r':\r\n",
					"        return r['x'] + 1"
				],
				"execution_count": 18
			},
