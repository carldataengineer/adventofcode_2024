				"source": [
					"df_routes = df_trailheads[['trailhead_id', 'x', 'y', 'height']].copy()\r\n",
					"\r\n",
					"df_routes['direction'] = [['u','d','l','r']] * df_routes.shape[0]\r\n",
					"df_routes = df_routes.explode('direction')\r\n",
					"df_routes['x_step'] = df_routes.apply(x_step, axis=1)\r\n",
